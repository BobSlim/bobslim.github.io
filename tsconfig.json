{
    "compilerOptions": {
        "module": "NodeNext",
        "allowJs": true,
        "noEmit": true,
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules"
    ],
}